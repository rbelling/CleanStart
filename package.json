{
  "name": "CleanStart",
  "version": "2.0.0-vue.0",
  "description": "Dockerized Vue.js static site boilerplate",
  "author": "Riccardo Bellingeri <riccardo.bellingeri@gmail.com>",
  "repository": "https://github.com/rbelling/CleanStart.git",
  "scripts": {
    "clean": "rm -rf node_modules package-lock.json dist/*",
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "_______________Docker workflow": "",
    "docker:build": "docker build -t clean-start .",
    "docker:run": "docker run -p 49160:8080 clean-start",
    "docker:run-detached": "docker run -p 49160:8080 -d clean-start"
  },
  "dependencies": {
    "colors-sass": "^1.0.0",
    "fastify": "^1.3.1",
    "modern-normalize": "^0.2.0",
    "vue": "^2.5.16",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.9",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.9",
    "@vue/cli-plugin-unit-jest": "^3.0.0-beta.9",
    "@vue/cli-service": "^3.0.0-beta.9",
    "@vue/eslint-config-prettier": "^3.0.0-beta.9",
    "@vue/test-utils": "^1.0.0-beta.10",
    "babel-core": "^7.0.0-0",
    "lint-staged": "^6.0.0",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 11"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 5.6.0"
  }
}

